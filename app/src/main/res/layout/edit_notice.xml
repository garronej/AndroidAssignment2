<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                android:id="@+id/title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemText"
                android:hint="@string/title"
                android:imeOptions="actionDone"
                android:inputType="text"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                android:id="@+id/description_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemText"
                android:hint="@string/description"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <AutoCompleteTextView
                android:id="@+id/location_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemText"
                android:imeOptions="actionDone"
                android:hint="@string/complete_address"
                android:inputType="text"
                />

        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >
            <it.polito.mobile.androidassignment2.StudentFlow.lab3.AutocompleteTokensInput
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tags_ac"
                android:layout_marginTop="2dp"
                android:inputType="text"
                android:imeOptions="actionDone"
                style="@style/ProfileItemText"
                android:hint="@string/tags"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                android:id="@+id/telephone_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemText"
                android:hint="@string/phone_number"
                android:inputType="phone"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                android:id="@+id/price_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ProfileItemText"
                android:hint="@string/price"
                android:inputType="number"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/side_margin"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginBottom="@dimen/vertical_margin"
            >
            <com.software.shell.fab.ActionButton
                android:id="@+id/submit_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/fab_margin"
                fab:button_color="@color/app_default_background"
                fab:button_colorPressed="@color/fab_material_blue_900"
                fab:image="@drawable/ic_action_accept"
                fab:image_size="40dp"
                fab:type="BIG"
                />

            <ProgressBar
                android:id="@+id/submit_pb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                style="@android:style/Widget.ProgressBar.Small"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>