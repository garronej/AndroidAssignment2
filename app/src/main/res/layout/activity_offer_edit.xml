<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.polito.mobile.androidassignment2.CompanyFlow.OfferShowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_header" >
            <ProgressBar
                android:id="@+id/photo_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@android:style/Widget.ProgressBar.Small"
                />
            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/offer_company_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:textSize="30sp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                style="@style/ProfileItemText"
                android:id="@+id/location"
                android:hint="@string/location"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                style="@style/ProfileItemText"
                android:id="@+id/job_offer_code"
                android:hint="@string/job_offer_code"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                style="@style/ProfileItemText"
                android:id="@+id/job_offer_description"
                android:hint="@string/job_offer_description"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                style="@style/ProfileItemText"
                android:id="@+id/kind_of_contract"
                android:hint="@string/kind_of_contract"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>

        <LinearLayout
            style="@style/ProfileItem" >

            <EditText
                style="@style/ProfileItemText"
                android:id="@+id/number_of_months"
                android:inputType="number"
                android:hint="@string/number_of_months"/>
        </LinearLayout>

        <View android:background="@color/medium_gray" android:layout_width="match_parent" android:layout_height="1dp"/>


        <LinearLayout
            style="@style/ProfileItem" >

            <it.polito.mobile.androidassignment2.CompetencesCompletionTextView
                style="@style/ProfileItemText"
                android:id="@+id/competences"
                android:hint="@string/competences"/>
        </LinearLayout>

        <Button
            android:id="@+id/edit_offer_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/vertical_margin"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:background="@color/app_default_background"
            android:text="@string/save"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            />

    </LinearLayout>
</ScrollView>
