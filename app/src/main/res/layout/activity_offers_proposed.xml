<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.polito.mobile.androidassignment2.CompanyFlow.OffersProposed">

    <include layout="@layout/company_tabbed_menu"></include>

    <Button
        android:id="@+id/add_job_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@color/app_default_background"
        android:textColor="@color/white"
        android:text="@string/add_new_job_offer"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:id="@+id/proposed_offers_list"
        >


    </ListView>

</LinearLayout>
