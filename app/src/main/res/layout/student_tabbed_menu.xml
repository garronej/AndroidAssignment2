<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_default_background"
    >
    <ImageButton
        android:id="@+id/tab_menu_student_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/abc_tab_indicator_material"
        android:src="@drawable/student"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <Button
        android:id="@+id/tab_menu_student_companies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/companies"
        android:background="@drawable/abc_tab_indicator_material"
        android:textColor="@color/white"
        android:singleLine="true"/>

    <Button
        android:id="@+id/tab_menu_student_offers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/offers"
        android:background="@drawable/abc_tab_indicator_material"
        android:textColor="@color/white"
        android:singleLine="true"/>
    <ImageButton
        android:id="@+id/tab_menu_student_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/abc_tab_indicator_material"
        android:src="@android:drawable/ic_menu_search"
        android:scaleType="fitCenter"
        android:layout_gravity="right"/>
</LinearLayout>