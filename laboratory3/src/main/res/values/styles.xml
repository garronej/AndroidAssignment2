<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/CustomizedActionBar</item>
        <item name="android:actionBarStyle">@style/CustomizedActionBar</item>


    </style>
    <style name="CustomizedActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/orange_polito</item>
        <item name="background">@color/orange_polito</item>
        <item name="android:backgroundStacked">@color/orange_polito</item>
        <item name="backgroundStacked">@color/orange_polito</item>


    </style>
    <style name="MyItemText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_marginLeft">@dimen/side_margin</item>
    <item name="android:layout_marginRight">@dimen/side_margin</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:textSize">@dimen/item_text</item>
    <item name="android:textColor">#000</item>
    <item name="android:gravity">center_vertical</item>
</style>

    <style name="ProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/vertical_margin</item>
    </style>

    <style name="ProfileItemLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/side_margin</item>
        <item name="android:textSize">@dimen/item_label</item>
        <item name="android:textColor">@color/medium_gray</item>
    </style>

    <style name="ProfileItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/side_margin</item>
        <item name="android:layout_marginRight">@dimen/side_margin</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">@dimen/item_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.PicassoSample.DescriptionUrl" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.PicassoSample.DescriptionText" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
