<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:orientation="vertical"
              tools:context="it.polito.mobile.laboratory3.NoticeListFragment"
              android:background="@android:color/background_light"

    >

    <it.polito.mobile.laboratory3.NoticesListView
        android:id="@+id/notice_list"
        android:name="it.polito.mobile.laboratory3.NoticeListFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <com.software.shell.fab.ActionButton
        android:id="@+id/btn_new_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        fab:image_size="24dp"
        fab:button_color="@color/orange_polito"
        fab:button_colorPressed="@color/fab_material_orange_900"
        fab:image="@drawable/fab_plus_icon"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/fab_margin"/>

</LinearLayout>